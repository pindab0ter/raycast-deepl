{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "deepl",
  "title": "DeepL",
  "description": "Get translations using DeepL",
  "icon": "command-icon.png",
  "author": "pindab0ter",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "nl",
      "title": "Translate to Dutch",
      "subtitle": "DeepL",
      "description": "Translate from an auto detected language to Dutch.",
      "mode": "view",
      "preferences": [
        {
          "name": "formality",
          "type": "dropdown",
          "title": "Formality",
          "required": true,
          "description": "What formality to prefer for this language.",
          "default": "default",
          "data": [
            {
              "title": "Default",
              "value": "default"
            },
            {
              "title": "Formal",
              "value": "formal"
            },
            {
              "title": "Informal",
              "value": "informal"
            }
          ]
        }
      ]
    }
  ],
  "preferences": [
    {
      "name": "plan",
      "type": "dropdown",
      "title": "Subscription Plan",
      "description": "Whether you are on a paid plan or not.",
      "required": true,
      "default": "free",
      "data": [
        {
          "title": "Free",
          "value": "free"
        },
        {
          "title": "Pro",
          "value": "pro"
        }
      ]
    },
    {
      "name": "apikey",
      "type": "password",
      "title": "API Key",
      "required": true,
      "placeholder": "Your DeepL API key",
      "description": "DeepL API key. Find this in your account details."
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.37.1",
    "node-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
